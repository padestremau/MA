					function changeCSSsheet(selector, property, value) {
					    for (var i=0; i < document.styleSheets.length;i++) { //Loop through all styles
					        //Try add rule
					        try { document.styleSheets[i].insertRule(selector+ ' {'+property+':'+value+'}', document.styleSheets[i].cssRules.length);
					        } catch(err) {try { document.styleSheets[i].addRule(selector, property+':'+value);} catch(err) {}}//IE
					    }
					}

              		var window_height = window.innerHeight;
				    var window_width = window.innerWidth;
                  	$(function(){
                  		// Set photobackground to window size
					    changeCSSsheet('#photo_background', 'width', window_width+'px !important');
					    changeCSSsheet('#photo_background', 'height', window_height+'px !important');
					    $('#photo_background').css({'height':window_height+'px', 'width':window_width+'px'});
	                  	
	                  	// Measure how many squares needed
	                  	// alert('Window height '+window_height);
	                  	var band_future_height = window_height * 0.55 ;
	                  	// alert('Band height '+band_future_height);
	                  	var cell_future_height = Math.ceil((band_future_height / 3)) - 8;
	                  	// alert('Cell height '+cell_future_height);
	                  	band_future_height = (cell_future_height + 8) * 3;
	                  	// alert('NEW Band height '+band_future_height);
	                  	var inOneRow = Math.floor((window_width - (window_width % (cell_future_height + 8) )) / (cell_future_height + 8));
	                  	// alert('Number in row '+inOneRow);
	                  	var totalSquares = inOneRow * 5;
	                  	// alert('Number total '+totalSquares);

