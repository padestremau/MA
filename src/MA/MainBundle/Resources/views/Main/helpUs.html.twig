								{% if pages|length > 0 %}
									{% for page in pages %}
										{% if page.dataBaseName == 'NousAider_Contributions' %}
											{% set nousAiderContribution = page %}
										{% endif %}
									{% endfor %}
								{% endif %}
						        <h3>
						        	{{ nousAiderContribution.title }}
						        </h3>
						        {{ nousAiderContribution.content|raw }}
					      	</div>
					    </div>

					    <br/>

					    <div class="thumbnail">
					    	<div class="caption">
					      		{% set nousAiderPartenaires = '' %}
								{% if pages|length > 0 %}
									{% for page in pages %}
										{% if page.dataBaseName == 'NousAider_Partenaires' %}
											{% set nousAiderPartenaires = page %}
										{% endif %}
									{% endfor %}
								{% endif %}
						        <h3>
						        	{{ nousAiderPartenaires.title }}
						        </h3>

								{% if partenaires|length > 0 %}
						        {{ nousAiderPartenaires.content|raw }}
								<div class="row">
									{% for partenaire in partenaires %}
									<div class="col-lg-6 col-md-6 col-sm-6 col-xs-4 photo_partner_container">
										<a href="{{ partenaire.website }}" class="no_style_a" target="_blank">
											<div class="row photo_partner_content">
												<div class="row80">
													{% if partenaire.alt|length > 0 and partenaire.url|length > 0 %}
														<div class="photo_partner" style="width: 100%; min-height:50px; background-image: url('{{ asset(partenaire.webPath) }}'); background-size: cover; background-position: 50%;" alt="{{ partenaire.name }}">
									                    </div>
													{% else %}
														<div class="photo_partner" style="background-size: 100%; background-image: url('{{ asset('img/system/defaults/default_img.png') }}'); background-size: cover; background-position: 50%;">
														</div>
													{% endif %}
													
												</div>
												<div class="center">
													<strong>
														{{ partenaire.name }}
													</strong>
													<br/>
													<span class="partner_link italic">
														{{ partenaire.website }}
													</span>
												</div>
											</div>
										</a>
									</div>
									{% endfor %}
								</div>
								{% else %}
								<p class="center">
									Aucun partenaire pour le moment.
								</p>
								{% endif %}
					      	</div>
					    </div>
					</div>
					<div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
						<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
						    <h4 class="left">
						    	Je préfère :
						    </h4>
						    <div class="row">
						    	<h5>
						    		1. Faire un don directement
						    	</h5>
						    	<hr class="medium_hr"/>
						    	<div class="row">
							    	<form action=" ">
							    		<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
							    			<div class="message_warning">
								    			-- En construction. -- 
								    			<br/>
								    			Disponible très prochainement avec déduction fiscale des impôts.
							    			</div>
											<!-- Pour cela, je décide de combien je donne :
											<ul class="list_no_style_li inline_li">
											    <li>
											    	<label>
											    		<input name="amount-once" type="radio" value="20" id="amount_20">
											    		<span id="amount_20">20 €</span> 
											    	</label>
											    </li>
