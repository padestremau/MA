		<div id="fullpage">

			<div class="section section_helpUs" id="helpUs">
				<div class="row">
					<h2>
						Nous aider
					</h2>
					<!-- <hr class="dark_hr"/> -->
				</div>

				<div class="row">
					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
					    <div class="thumbnail">
					      <div class="caption">
					        <h3>
					        	Répartitions des dons
					        </h3>
				        	<div class="row">
